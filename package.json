{
  "name": "@crazyone/ui",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev --concurrency=30",
    "build": "turbo build",
    "build:registry": "bun run scripts/build-registry.ts",
    "generate:theme": "bun run theme-generator/generate.ts",
    "lint": "turbo lint",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/bun": "latest",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  }
}